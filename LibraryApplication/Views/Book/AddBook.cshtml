@model EntityLayer.Entity.Book


@using (Html.BeginForm("AddBook", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-10 grid-margin stretch-card float-end">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">New Book</h4>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="Name">
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Author Name</label>
                    <input type="text" class="form-control" name="AuthorName">
                    @Html.ValidationMessageFor(x => x.AuthorName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input type="file" class="form-control" accept=".jpg, .jpeg, .png" name="imageFile">
                    @Html.ValidationMessageFor(x => x.ImageURL, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save</button>
                <button class="btn btn-dark mt-3">Cancel</button>
            </div>
        </div>
    </div>
}