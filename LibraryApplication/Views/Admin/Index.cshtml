@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<div class="col-lg-10 grid-margin stretch-card float-end mt-4">
    <div class="card">
        <div class="card-body">
                        <a asp-action="Create" class="btn btn-primary float-end mb-2">New User</a>
            <h4 class="card-title">Users</h4>
            <table class="table table-bordered table-striped">
                <tr>
                    <th>User Id</th>
                    <th>User Name</th>
                    <th>Email</th>
                </tr>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="3" class="text-center">
                            No Users
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>